<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="it.polito.tdp.indonumero.IndoNumeroController">
   <top>
      <Label alignment="CENTER" prefHeight="32.0" prefWidth="154.0" text="Indovina il numero" textAlignment="CENTER" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Button fx:id="btnNuova" mnemonicParsing="false" onAction="#handleNuova" text="Nuova partita" />
                  <Label text="tentativi">
                     <HBox.margin>
                        <Insets left="10.0" right="5.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtCurr" editable="false" prefColumnCount="2" />
                  <Label text="/" />
                  <TextField fx:id="txtMax" editable="false" prefColumnCount="2" />
               </children>
            </HBox>
            <HBox fx:id="boxGioco" alignment="CENTER" disable="true" spacing="5.0">
               <children>
                  <Label alignment="CENTER" text="Tentativo" />
                  <TextField fx:id="txtTentativo" prefHeight="31.0" prefWidth="80.0">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#handleProva" text="Prova" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <TextArea fx:id="txtLog" editable="false" prefColumnCount="30" prefRowCount="6" />
         </children>
         <BorderPane.margin>
            <Insets left="5.0" right="5.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
